<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to "#{fa_icon('paw lg')}".html_safe, root_path, class: "navbar-brand animated infinite pulse" %>
      <ul class="nav navbar-nav">
        <li><%= link_to "All Pets", pets_path %></li>
        <% if session[:user_id] %>
          <li><%= link_to "My Pets", pets_path(show_my_pets: true) %></li>
        <% end %>
        <li><%= link_to "Missing Pets", pets_path(show_missing: true) %></li>
      </ul>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <% if session[:user_id] %>
        <li><%= link_to edit_users_path do %>
          Hello <%= current_user.first_name %>
          <% end %>
        </li>
        <li><%= link_to "#{fa_icon("sign-out lg")} Sign out".html_safe, sessions_path, method: :delete %></li>
      <% else %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
            <%= "#{fa_icon("sign-in lg")} Sign in".html_safe %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <%= form_tag sessions_path do %>
              <li><div class="form-group col-md-12">
                <%= fa_icon("envelope-o") %><%#= label_tag :email %>
                <%= text_field_tag :email, "", placeholder: "Email address", class: "form-control" %>
              </div></li>
              <li><div class="form-group col-md-12">
                <%= fa_icon("key") %><%#= label_tag :password %>
                <%= password_field_tag :password, "", placeholder: "Password", class: "form-control" %>
              </div></li>
              <li><div class="form-group col-md-12">
                <%= submit_tag "Sign In", class: "btn btn-default btn-block" %>
              </div></li>
            <% end %>
            <li class="divider"></li>
            <li><%= link_to "Create an account", new_user_path %></li>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
