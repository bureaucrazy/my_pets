<%= simple_form_for(@pet) do |f| %>
  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :birth_place %>
    <%= f.input :birth_date, as: :date %>
    <%= f.input :breed %>
    <%= f.input :tracking_uid %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= f.button :button, 'Cancel', { :type => 'reset', :class=>"btn btn-default" } %>
  </div>
<% end %>
